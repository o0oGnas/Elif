<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.xyz.gnas.elif.controllers.ExplorerController">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ComboBox fx:id="cboDrive" prefWidth="150.0" />
            <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
               <children>
                  <Button mnemonicParsing="false" text="Back" HBox.hgrow="NEVER">
                     <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icons/back.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Label fx:id="lblFolderPath" text="Folder name" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="tbvTable" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="tbcName" prefWidth="300.0" sortable="false">
                     <graphic>
                        <Label fx:id="lblName" contentDisplay="RIGHT" onMouseClicked="#sort" text="Name">
                           <graphic>
                              <ImageView fx:id="imvName" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../icons/ascending.png" />
                                 </image></ImageView>
                           </graphic>
                        </Label>
                     </graphic></TableColumn>
                <TableColumn fx:id="tbcExtension" maxWidth="90.0" minWidth="90.0" prefWidth="90.0" sortable="false" styleClass="center-right-align">
                     <graphic>
                        <Label fx:id="lblExtension" contentDisplay="RIGHT" onMouseClicked="#sort" text="Extension">
                           <graphic>
                              <ImageView fx:id="imvExtension" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" visible="false">
                                 <image>
                                    <Image url="@../icons/ascending.png" />
                                 </image>
                              </ImageView>
                           </graphic></Label>
                     </graphic></TableColumn>
                  <TableColumn fx:id="tbcSize" editable="false" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" sortable="false" styleClass="center-right-align">
                     <graphic>
                        <Label fx:id="lblSize" contentDisplay="RIGHT" onMouseClicked="#sort" text="Size (bytes)">
                           <graphic>
                              <ImageView fx:id="imvSize" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" visible="false">
                                 <image>
                                    <Image url="@../icons/ascending.png" />
                                 </image>
                              </ImageView>
                           </graphic></Label>
                     </graphic></TableColumn>
                  <TableColumn fx:id="tbcDate" editable="false" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" sortable="false" styleClass="center-right-align">
                     <graphic>
                        <Label fx:id="lblDate" contentDisplay="RIGHT" onMouseClicked="#sort" text="Last modified date">
                           <graphic>
                              <ImageView fx:id="imvDate" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" visible="false">
                                 <image>
                                    <Image url="@../icons/ascending.png" />
                                 </image>
                              </ImageView>
                           </graphic></Label>
                     </graphic></TableColumn>
              </columns>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</AnchorPane>
