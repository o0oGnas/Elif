<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="xyz.gnas.elif.app.controllers.Operation.OperationController">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label fx:id="lblName" maxWidth="1000.0" text="Operation name"/>
                <Label fx:id="lblStatus" text="suboperation" textFill="#005500">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </Label>
                <ProgressIndicator fx:id="pgiProgress" progress="0.0">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <padding>
                        <Insets left="10.0"/>
                    </padding>
                </ProgressIndicator>
                <HBox fx:id="hboActions" alignment="CENTER_LEFT" fillHeight="false">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                    <children>
                        <Button fx:id="btnPauseResume" alignment="TOP_LEFT" mnemonicParsing="false"
                                onAction="#pauseOrResume" prefWidth="100.0" styleClass="sm" text="Pause">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                            <graphic>
                                <MaterialIconView fx:id="mivPauseResume" glyphName="PAUSE" size="16"/>
                            </graphic>
                        </Button>
                        <Button fx:id="btnStop" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#stop"
                                prefWidth="100.0" styleClass="sm" text="Stop">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                            <graphic>
                                <MaterialIconView glyphName="STOP" size="16"/>
                            </graphic>
                        </Button>
                    </children>
                </HBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
