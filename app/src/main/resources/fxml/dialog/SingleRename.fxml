<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane onKeyPressed="#keyPressed" prefWidth="400.0" xmlns="http://javafx.com/javafx/10.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="xyz.gnas.elif.app.controllers.Dialog.SimpleRenameController">
    <padding>
        <Insets bottom="0.0" left="0.0" right="10.0" top="10.0"/>
    </padding>
    <children>
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <HBox>
                    <children>
                        <MaterialIconView fx:id="mivFolder" glyphName="FOLDER_OPEN" size="16"/>
                        <ImageView fx:id="imvFile" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                   preserveRatio="true"/>
                        <Label fx:id="lblFile" text="File/folder ">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
                <TextField fx:id="txtName">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </TextField>
                <HBox alignment="CENTER">
                    <children>
                        <Button mnemonicParsing="false" onAction="#apply" text="Apply">
                            <graphic>
                                <MaterialIconView glyphName="CHECK_CIRCLE" size="16"/>
                            </graphic>
                        </Button>
                        <Button cancelButton="true" mnemonicParsing="false" onAction="#cancel" text="Cancel">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                            <graphic>
                                <MaterialIconView glyphName="CANCEL" size="16"/>
                            </graphic>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
