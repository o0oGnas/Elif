<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane onKeyReleased="#keyReleased" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="xyz.gnas.elif.app.controllers.dialog.EditAsTextController">
    <children>
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <TextArea fx:id="ttaContent" prefHeight="500.0" prefWidth="500.0"/>
                <HBox alignment="CENTER">
                    <children>
                        <Button fx:id="btnSave" mnemonicParsing="false" onAction="#save" text="Save">
                            <graphic>
                                <MaterialIconView glyphName="CHECK_CIRCLE" size="16"/>
                            </graphic>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#cancel" text="Cancel">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                            <graphic>
                                <MaterialIconView glyphName="CANCEL" size="16"/>
                            </graphic>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
